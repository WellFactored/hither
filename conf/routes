# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /v1/_ping                   controllers.StatusController.ping

#DELETE  /v1/repositories/:repository
GET     /v1/repositories/:repository/tags                           controllers.Tags.tagsWithoutNamespace(repository:String)
GET     /v1/repositories/:repository/tags/:tagName                  controllers.Tags.tagNameWithoutNamespace(repository:String, tagName:String)
GET     /v1/repositories/:namespace/:repository/tags                controllers.Tags.tags(namespace:String, repository:String)
GET     /v1/repositories/:namespace/:repository/tags/:tagName       controllers.Tags.tagName(namespace:String, repository:String, tagName:String)
#PUT     /v1/repositories/:namespace/:repository/tags/:tagName       controllers.Tags.putTagName(namespace:String, repository:String, tagName:String)

PUT     /v1/repositories/:repository/                               controllers.Repositories.imageList(repository:RepositoryName)

GET     /v1/repositories/:repository/images                         controllers.Repositories.imagesNoNamespace(repository:RepositoryName)
GET     /v1/repositories/:namespace/:repository/images              controllers.Repositories.images(namespace:Namespace, repository:RepositoryName)

GET     /v1/images/:imageId/ancestry    controllers.Images.ancestry(imageId:ImageId)
GET     /v1/images/:imageId/json        controllers.Images.json(imageId:ImageId)
PUT     /v1/images/:imageId/json        controllers.Images.putJson(imageId:ImageId)

GET     /v1/images/:imageId/layer       controllers.Images.layer(imageId:ImageId)

PUT     /v1/images/:imageId/layer       controllers.Images.putLayer(imageId:ImageId)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
